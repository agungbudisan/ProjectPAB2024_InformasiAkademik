<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="98sp"
            android:layout_height="56sp"
            android:layout_marginStart="27sp"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/unstower"
            android:layout_gravity="center_horizontal"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Universitas Sebelas Maret"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Jl. Ir. Sutami No. 36A, Surakarta, Jawa Tengah, Indonesia"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_sejarah_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Sejarah"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_sejarah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Universitas Sebelas Maret didirikan pada tanggal 11 Maret 1976, sesuai dengan Keputusan Presiden Republik Indonesia Nomor 10 Tahun 1976. Nama 'Sebelas Maret' dipilih untuk mengenang hari berdirinya universitas ini."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_faculty_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Fakultas dan Program Studi"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_faculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="UNS menawarkan berbagai fakultas dan program studi, baik di jenjang sarjana (S1), magister (S2), maupun doktor (S3). Beberapa fakultas yang ada di UNS antara lain:\n- Fakultas Kedokteran\n- Fakultas Ekonomi dan Bisnis\n- Fakultas Hukum\n- Fakultas Ilmu Sosial dan Ilmu Politik\n- Fakultas Teknik\n- Fakultas Keguruan dan Ilmu Pendidikan\n- Fakultas Sastra dan Seni Rupa\n- Fakultas MIPA\n- Fakultas Pertanian\n- Fakultas Teknologi Informasi dan Sains Data"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_vision_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Visi"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_vision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Menjadi pusat pengembangan ilmu pengetahuan, teknologi, dan seni yang unggul berlandaskan nilai-nilai luhur budaya nasional."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_mission_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Misi"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_mission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="1. Menyelenggarakan pendidikan yang berkualitas untuk menghasilkan lulusan yang kompeten dan berdaya saing tinggi.\n2. Melakukan penelitian yang inovatif dan aplikatif untuk pengembangan ilmu pengetahuan, teknologi, dan seni.\n3. Mengabdikan ilmu pengetahuan, teknologi, dan seni untuk kesejahteraan masyarakat.\n4. Mewujudkan tata kelola universitas yang baik (good university governance)."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_facilities_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Fasilitas"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_facilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="UNS menyediakan berbagai fasilitas untuk mendukung kegiatan akademik dan non-akademik, di antaranya:\n- Perpustakaan\n- Laboratorium\n- Pusat Kegiatan Mahasiswa\n- Asrama Mahasiswa\n- Rumah Sakit Pendidikan\n- Pusat Olahraga\n- Pusat Bahasa"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_activities_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Kegiatan dan Organisasi Mahasiswa"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_activities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="UNS memiliki banyak organisasi mahasiswa yang aktif dalam berbagai bidang seperti:\n- BEM (Badan Eksekutif Mahasiswa)\n- UKM (Unit Kegiatan Mahasiswa) seperti UKM Seni, UKM Olahraga, dan UKM Riset\n- HMJ (Himpunan Mahasiswa Jurusan)"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_collaboration_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Kerjasama dan Jaringan"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_collaboration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="UNS menjalin kerjasama dengan berbagai institusi, baik dalam negeri maupun luar negeri, dalam rangka pengembangan akademik, penelitian, dan pengabdian kepada masyarakat."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_contact_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Kontak"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Telepon: (0271) 646994\nEmail: info@uns.ac.id\nWebsite: www.uns.ac.id"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
